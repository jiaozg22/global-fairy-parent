<?xml version="1.0"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.jzg.fairy</groupId>
    <artifactId>global-fairy-parent</artifactId>
    <version>0.0.1-SNAPSHOT</version>
  </parent>
  <groupId>org.global.fairy.doc</groupId>
  <artifactId>global-fairy-doc</artifactId>
  <name>global-fairy-doc</name>
  <url>http://maven.apache.org</url>
  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>
  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>3.8.1</version>
      <scope>test</scope>
    </dependency>
  </dependencies>
  
  <build>
 		<plugins>
 			<plugin>
 				<artifactId>global-fairy-doc-plugin</artifactId>
 				<groupId>org.global.fairy.doc.plugin</groupId>
 				<version>0.0.1</version> 				
 				<configuration>
					<uriEncoding>UTF-8</uriEncoding>
					<classPath>/target/class/</classPath>
		            <basePackagePath>org.global.fairy.doc</basePackagePath>
		            <outPath>/doc</outPath>
				</configuration>
				<executions>
					<execution>
						<phase>install</phase>
						<goals>
							<goal>
								api
							</goal>
						</goals>
					</execution>
				</executions>
 			</plugin>
 		</plugins>
 	</build>
</project>
